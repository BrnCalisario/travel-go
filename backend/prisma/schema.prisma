generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  fullName    String
  cpf         String
  password    String
  isAdmin     Boolean
  Reservation Reservation[]
}

model City {
  id       Int        @id @default(autoincrement())
  country  String
  state    String
  city     String
  Location Location[]
}

model Location {
  id       Int     @id @default(autoincrement())
  cep      String
  street   String
  Number   String
  District String
  cityId   Int
  Hotel    Hotel[]
  city     City    @relation(fields: [cityId], references: [id])
}

model Hotel {
  id             Int              @id @default(autoincrement())
  hotelName      String
  image          String
  imageKey       String
  locationId     Int
  location       Location         @relation(fields: [locationId], references: [id])
  HotelAmenities HotelAmenities[]
  Rating         Rating[]
  Room           Room[]
}

model Rating {
  id      Int      @id @default(autoincrement())
  review  String
  Rating  Float
  date    DateTime
  hotelId Int
  hotel   Hotel    @relation(fields: [hotelId], references: [id])
}

model RoomType {
  id       Int    @id @default(autoincrement())
  type     String
  capacity Int
  Room     Room[]
}

model Room {
  id          Int           @id @default(autoincrement())
  hotelId     Int
  roomTypeId  Int
  hotel       Hotel         @relation(fields: [hotelId], references: [id])
  roomType    RoomType      @relation(fields: [roomTypeId], references: [id])
  Reservation Reservation[]
}

model Amenity {
  id             Int              @id @default(autoincrement())
  amenity        String
  HotelAmenities HotelAmenities[]
}

model HotelAmenities {
  id        Int     @id @default(autoincrement())
  amenityId Int
  hotelId   Int
  amenity   Amenity @relation(fields: [amenityId], references: [id])
  hotel     Hotel   @relation(fields: [hotelId], references: [id])
}

model Reservation {
  id       Int      @id @default(autoincrement())
  checkIn  DateTime
  checkOut DateTime
  roomId   Int
  userId   Int
  user     User     @relation(fields: [userId], references: [id])
  room     Room     @relation(fields: [roomId], references: [id])
}
