generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  fullName    String
  cpf         String
  password    String
  Reservation Reservation[]
}

model City {
  id       Int        @id @default(autoincrement())
  country  String
  state    String
  city     String
  Location Location[]
}

model Location {
  id       Int     @id @default(autoincrement())
  cep      String
  street   String
  Number   String
  District String
  city     City    @relation(fields: [cityId], references: [id])
  cityId   Int
  Hotel    Hotel[]
}

model Hotel {
  id            Int             @id @default(autoincrement())
  hotelName     String
  location      Location        @relation(fields: [locationId], references: [id])
  locationId    Int
  Rating        Rating[]
  Room          Room[]
  HotelXAmenity HotelXAmenity[]
}

model Rating {
  id      Int      @id @default(autoincrement())
  review  String
  Rating  Float
  date    DateTime
  hotel   Hotel    @relation(fields: [hotelId], references: [id])
  hotelId Int
}

model RoomType {
  id        Int    @id @default(autoincrement())
  type      String
  capacitty Int
  Room      Room[]
}

model Room {
  id          Int           @id @default(autoincrement())
  quantity    Int
  hotel       Hotel         @relation(fields: [hotelId], references: [id])
  hotelId     Int
  roomType    RoomType      @relation(fields: [roomTypeId], references: [id])
  roomTypeId  Int
  Reservation Reservation[]
}

model AmenityType {
  id      Int       @id @default(autoincrement())
  type    String
  Amenity Amenity[]
}

model Amenity {
  id            Int             @id @default(autoincrement())
  amenity       String
  amenityType   AmenityType     @relation(fields: [amenityTypeId], references: [id])
  amenityTypeId Int
  HotelXAmenity HotelXAmenity[]
}

model HotelXAmenity {
  id        Int     @id @default(autoincrement())
  amenity   Amenity @relation(fields: [amenityId], references: [id])
  amenityId Int
  hotel     Hotel   @relation(fields: [hotelId], references: [id])
  hotelId   Int
}

model Reservation {
  id            Int      @id @default(autoincrement())
  roomsQuantity Int
  checkIn       DateTime
  checkOut      DateTime
  room          Room     @relation(fields: [roomId], references: [id])
  roomId        Int
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
}
