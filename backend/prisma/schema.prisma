generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  fullName    String
  cpf         String
  password    String
  isAdmin     Boolean
  Reservation Reservation[]
  Packages    Packages[]
}

model Image {
  id       Int     @id @default(autoincrement())
  imageBin Bytes
  Hotel    Hotel[]
}

model Hotel {
  id             Int              @id @default(autoincrement())
  hotelName      String
  image          Image            @relation(fields: [imageId], references: [id])
  cep            String
  city           String
  number         String
  state          String
  price          Decimal          @default(200)
  HotelAmenities HotelAmenities[]
  Rating         Rating[]
  Reservation    Reservation[]
  imageId        Int
}

model Rating {
  id      Int      @id @default(autoincrement())
  review  String
  Rating  Float
  hotelId Int
  date    DateTime
  hotel   Hotel    @relation(fields: [hotelId], references: [id])
}

model Amenity {
  id             Int              @id @default(autoincrement())
  amenity        String
  HotelAmenities HotelAmenities[]
}

model HotelAmenities {
  id        Int     @id @default(autoincrement())
  amenityId Int
  hotelId   Int
  amenity   Amenity @relation(fields: [amenityId], references: [id])
  hotel     Hotel   @relation(fields: [hotelId], references: [id])
}

model Reservation {
  id       Int        @id @default(autoincrement())
  checkIn  DateTime
  checkOut DateTime
  userId   Int
  hotelId  Int
  hotel    Hotel      @relation(fields: [hotelId], references: [id])
  user     User       @relation(fields: [userId], references: [id])
  Packages Packages[]
}

model Ticket {
  id       Int        @id @default(autoincrement())
  depart   DateTime
  return   DateTime
  from     String
  to       String
  means    String
  Packages Packages[]
}

model Packages {
  id            Int         @id @default(autoincrement())
  reservation   Reservation @relation(fields: [reservationId], references: [id])
  reservationId Int
  ticket        Ticket      @relation(fields: [ticketId], references: [id])
  ticketId      Int
  user          User        @relation(fields: [userId], references: [id])
  userId        Int
}
